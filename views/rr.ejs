<!DOCTYPE html>
<html>
<head>
<% include Head.ejs %>
</head>

<body>
<% include Navbar.ejs %>


<script>
var x = document.getElementById("result");
x.className = "active";
</script>

<%= data %>
<!--  Result Tab in Students Portal-->
    <div id="menu3">
        <div class="w3-box-center-table">
    <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable">
        <thead>
        <tr class="w3-light-grey">
          <th class="w3-grey">Semester</th>
        </tr>
        </thead>
        <%= if(data == null) {%>
          <h1> No data </h1>
          <%}%>
        <%= if(data) {%>
        <% for(r=0; r < data.length; r++) { %>
        <tr data-toggle="modal" data-target="#semester1">
          <td>Semester <%= data[r][0].sem %> </td>
        </tr>
              <% } %>
                  <% } %>
  </table>
  <br>
</div>


    </div>



  <div class="modal fade" id="semester1" role="dialog">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>


                </div>

                <div class="modal-body">
                          <div class="w3-box-center-table">
                          <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable">
                              <thead>
                              <tr class="w3-light-grey">
                                <th class="w3-grey">Courses</th>
                                <th class="w3-grey">Credits</th>
                                <th class="w3-grey">Grade</th>
                              </tr>
                              </thead>
                              <%= if(data){ %>
                              <% for(w=0;  w< data[0].length; w++) { %>
                              <tr>
                                <td><%= data[0][w].course_name %></td>
                                <td><%= data[0][w].credit %></td>
                                <td><%= data[0][w].grade %></td>
                              </tr>
                                <% } %>
                                  <% } %>
                          </table>
                          </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
               </div>
              </div>

            </div>
          </div>
        </div>

<% include Footer.ejs %>

</body>
</html>
